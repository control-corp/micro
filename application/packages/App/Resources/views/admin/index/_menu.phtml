<?php

foreach ($this->container as $item) {
    echo '<div class="panel panel-default" style="margin: 5px 0 10px 0;">';
    if ($item->hasPages()) {
        echo '<div class="panel-heading" style="padding: 5px 10px"><a href="' . $item->getHref() . '">' . $item->getLabel() . '</a></div>';
        echo '<div class="panel-body" style="background-color: #FCFCFC; padding: 5px 10px">';
        echo $this->partial('admin/index/_menu', array('container' => $item, 'level' => $this->level + 1));
        echo '</div>';
    } else {
        echo '<div class="panel-body" style="padding: 5px 10px"><a href="' . $item->getHref() . '">' . $item->getLabel() . '</a></div>';
    }
    echo '</div>';
}