<?php$reNewDate = '';$alert = 'brand-default';$txt = '';if ($this->item['reNewDate']) {    $date = new \DateTime($this->item['reNewDate']);    $reNewDate = $date->format('d.m.Y');    $now = new \DateTime();    $diff = $date->diff($now);    $months = $diff->days / 30;    $months = (int) round($months);    if ($diff->invert === 0) {        //$alert = 'brand-alert';        $txt = '&nbsp;/<br />' . ($months . ' пропуснати месеца');    }}echo '<div class="' . $alert . '">' . $reNewDate . $txt . '</div>';